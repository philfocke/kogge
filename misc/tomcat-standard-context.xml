<?xml version="1.0" encoding="UTF-8"?>
<Context>
  <Resource name="jdbc/mariadb"

                auth="Container"
                type="javax.sql.DataSource"
                maxActive="20"
                maxTotal="20" 
                minIdle="10"
                maxWait="10000"
                username="DBUSER"
                password="DBPASSWORD"
                driverClassName="org.mariadb.jdbc.Driver"
                url="jdbc:mariadb://DBSERVER:3306/DBNAME" />
</Context>
